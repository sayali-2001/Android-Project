<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#e0e0e0"/> <!-- Shadow white when pressed -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
            <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#f5f5f5"/> <!-- Default shadow white -->
            <corners android:radius="4dp" /> <!-- Rounded corners -->
            <padding android:left="8dp" android:right="8dp" android:top="4dp" android:bottom="4dp"/>
        </shape>
    </item>
</selector>
