<!-- res/drawable/shadow_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="oval">
            <solid android:color="#80000000"/> <!-- Shadow color with transparency -->
            <size
                android:width="60dp"
                android:height="60dp"/>
            <corners android:radius="17.5dp"/> <!-- Half of width/height for perfect circle -->
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <solid android:color="#D8DBF2"/> <!-- Grey background color -->
            <size
                android:width="35dp"
                android:height="35dp"/>
            <corners android:radius="17.5dp"/> <!-- Half of width/height for perfect circle -->
        </shape>
    </item>
</layer-list>